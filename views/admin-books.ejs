<!DOCTYPE html>
<html>
<head>
    <title>Admin Books</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>

<body>
<header>
    <%- include('navbar'); %>
</header>

<div class="container mt-5">

    <h1 class="mb-4">Manage Books</h1>

    <button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#createModal">
        + Add New Book
    </button>

    <table class="table table-striped table-bordered shadow">
        <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Image</th>
            <th>Title</th>
            <th>Genre</th>
            <th>Price</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        <% books.forEach(book => { %>
            <tr>
                <td><%= book.id %></td>
                <td><img src="<%= book.image_url %>" width="60"></td>
                <td><%= book.title %></td>
                <td><%= book.genre %></td>
                <td>$<%= book.price %></td>
                <td><%= book.description %></td>
                <td>
                    <a href="/admin/books/edit/<%= book.id %>" class="btn btn-warning btn-sm">Edit</a>

                    <form action="/admin/books/delete/<%= book.id %>" method="POST" style="display:inline;">
                        <button class="btn btn-danger btn-sm" onclick="return confirm('Delete this book?')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>

<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <form action="/admin/books/create" method="POST">

                <div class="modal-header">
                    <h5 class="modal-title">Add Book</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input class="form-control mb-2" name="title" placeholder="Title" required>
                    <input class="form-control mb-2" name="genre" placeholder="Genre" required>
                    <input class="form-control mb-2" name="author" placeholder="Author" required>
                    <input class="form-control mb-2" type="number" name="price" placeholder="Price" required>
                    <input class="form-control mb-2" name="image_url" placeholder="Image URL" required>
                    <textarea class="form-control" name="description" placeholder="Description"></textarea>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-success">Add Book</button>
                </div>

            </form>

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
