<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Search: <%= query %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

<header>
    <%- include('navbar'); %>
</header>

<div class="container mt-5">

    <h2 class="mb-4">Results for: "<%= query %>"</h2>

    <% if (books.length === 0) { %>

        <div class="alert alert-warning">
            No books found for your search.
        </div>

    <% } else { %>

        <div class="row mt-4">

            <% books.forEach(book => { %>
                <div class="col-md-3 mb-4">

                    <div class="card h-100 shadow-sm">
                        <img src="<%= book.image_url %>" class="card-img-top" alt="<%= book.title %>">

                        <div class="card-body text-center">

                            <h5><%= book.title %></h5>
                            <p class="text-muted mb-1"><%= book.author %></p>
                            <p class="text-muted"><small><%= book.genre %></small></p>
                            <p><strong>$<%= book.price %></strong></p>

                            <a href="/book/<%= book.id %>" class="btn btn-primary btn-sm w-100 mb-2">
                                Details
                            </a>

                            <% if (session.user && session.user.role === 'user') { %>
                                <form action="/cart/add/<%= book.id %>" method="POST">
                                    <button class="btn btn-success btn-sm w-100">
                                        Add to Cart
                                    </button>
                                </form>
                            <% } %>

                        </div>
                    </div>

                </div>
            <% }) %>

        </div>

    <% } %>

</div>

</body>

</html>
